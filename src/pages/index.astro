		}
		.skills-section-mini{
			display: none;
		}
		@media (max-width: 768px) {
			.hero-Content {
				max-height: auto;
				display: flex;
				justify-content: center;
				align-items: center;
				background-color: #010101;
				color: white;
				padding: 20px;
			}
			.social-links {
				display: none;
			}
			.hero-image {
				width: 98%;
				position: absolute;
			}
			.hero-name {
				width: auto;
				right: 80px;
				top: 480px;
			}
			h3 {
				font-weight: 100;
				width: auto;
				text-align: right;
				font-size: 28px;
			}
		.description-content-divider{
			max-width: 100%;
			min-height: 300px;
			position: relative;
			display: flex;
    justify-content: center;
	align-items: center;
		}
		.description-picture{
			position: absolute;
			width: 250px;
			left: -10px;
			bottom: -47px;
		}
		.description-text{
			width: 80%;
			text-align: center;
			font-size: 12px;
		}
		h4{
			font-size: 16px;
			margin: 5px 10px;
		}
		.skills-section-mini{
			display: none;
		}
		}
		@media (max-width: 425px) {
			.hero-Content {
				height: 350px;
				display: flex;
				justify-content: center;
				align-items: center;
				background-color: #010101;
				color: white;
				padding: 20px;
			}
			.social-links {
				display: none;
			}
			.hero-image {
				width: 320px;
				position: absolute;
			}
			.hero-name {
				width: auto;
				right: 21px;
    top: 340px;
			}
			h3 {
				font-weight: 100;
				width: auto;
				text-align: right;
				font-size: 22px;
			}
		.description-content-divider{
			max-width: 100%;
			min-height: 300px;
			position: relative;
			display: flex;
    justify-content: center;
	align-items: center;
		}
		.description-picture{
			display: none;
		}
		.description-text{
			width: 80%;
			text-align: center;
			font-size: 12px;
		}
		h4{
			font-size: 16px;
			margin: 5px 10px;
		}
		.skills-content{
			background-color: #E6DFCE;
			display: flex;
    justify-content: center;
	align-items: center;
		}

		.skills-section{
			display: none;

		}
		.skills-section-mini{
			display: flex;
    position: absolute;
    flex-direction: column;
