---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero-Content">
				<div class="hero-image">
					<img src="./public/Group 8.png" />
				</div>
				<div class="hero-name">
					<h3>Hi there! <br /> I'm Karen Molina</h3>
				</div>
			</section>
			<section class="description-Content">
				<div class="description-picture">
					<picture>
						<source media="(max-width: 799px)" srcset="./public/rect1.png" />
						<source media="(min-width: 800px)" srcset="./public/rect12.png"  width="450px" />
						<img src="./public/rect12.png" />
					  </picture>
				</div>
				<div class="description-content-divider">
					<p class="description-text">
						Originally I was studying Biology üß¨ at UNAM, I shifted
						to Social Anthropology due to an interest in humanities.
						I grew up with technology, sparking curiosity in Free
						Software during college. Explored coding with Arduino,
						now a Frontend Developer since 2019. Passionate about
						digital culture, I teach STEAM workshops and contribute
						to various organizations. Currently pursuing a master's
						in Communications and Digital Humanities at Universidad
						del Claustro de Sor Juana. üë©‚Äçüíª
					</p>
				</div>
			</section>
			<section class="skills-content">
				<div class="skills-divider">
					<div class="skills-section"> <h4>Frontend</h4> <h4>Steam Mentor</h4> <h4>Dev Mentor</h4> <h4>Speaker</h4></div>
					<div class="skills-section-mini"> <h4>Frontend</h4> <h4>Steam Mentor</h4> <h4>Dev Mentor</h4> <h4>Speaker</h4></div>
				</div>
				<div >
					<picture>
						<source media="(max-width: 799px)" srcset="./public/rect2.png" width="300px" />
						<source media="(min-width: 800px)" srcset="./public/rect2.png"  width="350px" />
						<img src="./public/rect2.png" />
					  </picture>
				</div>
			</section>
			<section></section>
		</main>
		<Footer />
	</body><style>
		.hero-Content {
			height: 500px;
			display: flex;
			justify-content: center;
			align-items: center;
			background-color: #010101;
			color: white;
			padding: 20px;
		}
		p {
			padding: 0 !important;
		}
		.hero-image {
			width: 750px;
			position: absolute;
		}
		.hero-name {
			width: 750px;
			position: absolute;
		}
		h3 {
			font-weight: 100;
		}
		.description-Content {
			background-color: #377aa5;
			color: white;
			display: flex;
			max-height: 328px;
			justify-content: center;
    align-items: center;
		}
		.description-content-divider{
			max-width: 540px;
		}
		.description-text{
			margin: 30px;
			text-align: center;
			font-size: 14px;
		}

		.skills-content{
			background-color: #E6DFCE;
			display: flex;
    justify-content: center;
	align-items: center;
		}

		.skills-divider{

			background-color: #010101;
			color: white;
			width: 100%;
		}
		.skills-section{
			display: flex;
			justify-content: end;
		}
		h4{
			font-weight: 200;
			text-transform: uppercase;
